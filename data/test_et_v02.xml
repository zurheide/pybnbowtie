<?xml version="1.0"?>
<opsa-mef>
  <define-fault-tree name="Simple Fault Tree">
    <define-gate name="OR">
      <label>Test of an OR gate</label>
      <or>
        <basic-event name="X1"/>
        <basic-event name="X2"/>
      </or>
    </define-gate>
  </define-fault-tree>
  <define-initiating-event name="OR" event-tree="EventTree"/>
  <define-event-tree name="EventTree">
    <define-functional-event name="e1"/>
    <define-functional-event name="e2"/>
    <define-functional-event name="e3"/>
    <define-sequence name="C1"/>
    <define-sequence name="C2"/>
    <define-sequence name="C3"/>
    <define-sequence name="C4"/>
    <initial-state>
      <fork functional-event="e1">
        <path state="works">
          <collect-expression>
            <float value="0.8"/>
          </collect-expression>
          <fork functional-event="e2">
            <path state="works">
              <collect-expression>
                <float value="0.60"/>
              </collect-expression>
              <sequence name="C1"/>
            </path>
            <path state="fails">
              <collect-expression>
                <float value="0.40"/>
              </collect-expression>
              <sequence name="C2"/>
            </path>
          </fork>
        </path>
        <path state="fails">
          <collect-expression>
            <float value="0.2"/>
          </collect-expression>
          <fork functional-event="e2">
            <path state="works">
              <collect-expression>
                <float value="0.60"/>
              </collect-expression>
              <sequence name="C3"/>
            </path>
            <path state="fails">
              <collect-expression>
                <float value="0.40"/>
              </collect-expression>
              <sequence name="C4"/>
            </path>
          </fork>
        </path>
      </fork>
    </initial-state>
  </define-event-tree>
  <model-data>
    <define-basic-event name="X1">
      <label>First basic event</label>
      <float value="5.0E-4"/>
    </define-basic-event>
    <define-basic-event name="X2">
      <label>Second basic event</label>
      <float value="5.0E-04"/>
    </define-basic-event>
  </model-data>
</opsa-mef>
